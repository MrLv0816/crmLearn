<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.konfan.crm.settings.dao.UserDao">

    <select id="findUserByLoginActAndLoginPwd" resultType="cn.konfan.crm.settings.domain.User">
        select *
        from tbl_user
        where loginAct = #{loginAct}
          and loginPwd = #{loginPwd}
    </select>

    <select id="findNameById" resultType="String">
        select name
        from tbl_user
        where id = #{id};
    </select>

    <select id="findAll" resultType="cn.konfan.crm.settings.domain.User">
        select *
        from tbl_user;
    </select>

    <select id="findById" resultType="cn.konfan.crm.settings.domain.User">
        select *
        from tbl_user
        where id = #{id};
    </select>


</mapper>